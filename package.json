{
	"name": "ambientalarm-api",
	"version": "v0.1.0",
	"private": true,
	"main": "src/server.js",
	"scripts": {
		"start": "NODE_ENV=production pm2 start ./src/server.js -i 0 --name \"api-server\"",
		"restart": "pm2 reload api-server --update-env",
		"stop": "pm2 stop api-server",
		"stag": "NODE_ENV=staging pm2 start ./src/server.js -i 0 --name \"api-server\"",
		"dev": "NODE_ENV=development nodemon .",
		"test": "NODE_ENV=test jest --coverage"
	},
	"repository": "https://github.com/leiklier/ambientalarm-api.git",
	"author": "Leik Lima-Eriksen <leik.lima-eriksen@lyse.net>",
	"license": "MIT",
	"dependencies": {
		"@okgrow/graphql-scalars": "^0.4.5",
		"apollo-server-express": "^2.7.0",
		"body-parser": "^1.19.0",
		"cookie-parser": "^1.4.4",
		"crypto": "^1.0.1",
		"crypto-js": "^3.1.9-1",
		"dataloader": "^1.4.0",
		"doasync": "^2.0.1",
		"dotenv": "^8.0.0",
		"express": "^4.17.1",
		"graphql": "^14.2.1",
		"graphql-tools": "^4.0.4",
		"http-status-codes": "^1.3.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.5.5",
		"mongoose-bcrypt": "^1.6.0",
		"mongoose-gridfs": "^1.2.3",
		"validator": "^10.11.0",
		"winston": "^3.2.1",
		"winston-transport": "^4.3.0"
	},
	"devDependencies": {
		"husky": "^2.2.0",
		"jest": "^24.8.0",
		"mongodb-memory-server": "^5.1.1",
		"nodemon": "^1.18.11",
		"prettier": "^1.17.0",
		"pretty-quick": "^1.10.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
